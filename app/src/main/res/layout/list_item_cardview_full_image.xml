<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    style="@style/CardViewTheme"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cv_image"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/swim_card_xxxhdpi_new"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:riv_corner_radius_bottom_left="0dp"
            card_view:riv_corner_radius_bottom_right="0dp"
            card_view:riv_corner_radius_top_left="5dp"
            card_view:riv_corner_radius_top_right="5dp"
            card_view:riv_mutate_background="true" />

        <TextView
            android:id="@+id/cv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="10dp"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="@android:color/white"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/cv_desc"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintBottom_toBottomOf="@+id/cv_image"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/cv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:paddingStart="5dp"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/cv_image" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
